<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Your Order is placed Successfully! Thank you!</h4>
  </div>

    
  <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="2">Product</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @order.line_items.each do |item| %>
            <%= render 'line_item', product: item.product, quantity: item.quantity, totals: item.total_price_cents %>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="4">
              Total Price:
            </th>
            <th>
              <%= humanized_money_with_symbol @order.total_cents/100 %>
            </th>
          </tr>
        </tfoot>
      </table>

  <p>Your Email: <i><%= @order.email %></i></p>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
