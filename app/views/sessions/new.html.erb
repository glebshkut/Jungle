<h1>Login</h1>

<div class="sign-in-form">
  <%= form_tag '/login' do %>
    <div class="sign-in-row">Email: <%= text_field_tag :email %></div>
    <div class="sign-in-row">Password: <%= password_field_tag :password %></div>
    <div class="sign-in-row" id="submit"><%= submit_tag "Submit" %></div>
  <% end %>
</div>